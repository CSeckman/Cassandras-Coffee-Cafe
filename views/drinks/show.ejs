<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/style.css"/>
<%- include('../partials/nav') %>

<main>
  <h1 class="drink-ready top-of-page"">Order ready for <%= user.profile.name %>!</h1>
  <div class="card text-center">
    <div class="card-header">
      <h2 class="card-title"><%= drink.name %></h5>
    </div>
    <div class="card-body">
      <h3 class="card-text">
      <%= drink.size %>, 
      <%= drink.iced ? 'Iced' : 'Hot' %>,
      <%= drink.brew %><br> 
      <%= drink.addShot ? 'Extra Shot' : 'Regular' %>,
      Add <%= drink.flavor %>,
      Add <%= drink.milk %><br> 
      <%= drink.addShot ? 'Whipped Cream' : 'No Whipped Cream' %>
      <%= drink.drizzle %> drizzle
      </h3>
    </div>
    <div class="card-footer">
      <a href="/drinks/<%= drink._id %>/profiles">
        <button type="submit" class="btn btn-secondary">
          Add Drink To My Favorites
        </button>
      </a> 
    </div>
  </div>
    
</main>

<%- include('../partials/footer') %>
