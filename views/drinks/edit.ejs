<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/style.css" />

<main class='main-main'>
  <div class="main-landing-div">
    <%- include('../partials/nav') %>
    <div class="content">
      <h1 class="edit top-of-page">
        <%= title %> 
      </h1>
      <form action="/drinks/<%= drink._id %>?_method=PATCH" method="POST">
        <div class="mb-2">
          <select class="form-select edit-size" name="size">
            <option value="<%= drink.size %>"><%= drink.size %></option>
            <option value="Small">Small</option>
            <option value="Medium">Medium</option>
            <option value="Large">Large</option>
          </select>
          <button class="btn btn-secondary" type="submit">Update Drink Size</button>
        </div>
      </form>
    </div>
  </div>
</main>

<%- include('../partials/footer') %>